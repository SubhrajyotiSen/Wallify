<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <PreferenceCategory
        android:title="Image Settings">
    <CheckBoxPreference android:title="Grayscale"
        android:defaultValue="false"
        android:summary="Wallpapers will be displayed in grayscale mode."
        android:key="grayscale" />
    </PreferenceCategory>
    <PreferenceCategory
        android:title="Wallpaper Options">
        <CheckBoxPreference
            android:title="Daily Wallpaper"
            android:defaultValue="false"
            android:summary="Wallify will automatically set a random wallpaper every day "
            android:key="daily"/>
    </PreferenceCategory>
    <PreferenceCategory
        android:title="Extras">
        <Preference
            android:title="Check for Updates"
            android:key="updates"/>
        <Preference
            android:title="About"
            android:key="about"/>
    </PreferenceCategory>

    <com.afollestad.appthemeengine.prefs.ATEPreferenceCategory
        android:title="Base Theme"
        >

        <com.afollestad.appthemeengine.prefs.ATESwitchPreference
            android:defaultValue="false"
            android:key="dark_theme"
            android:persistent="true"
            android:title="Dark Theme"
            android:widgetLayout="@layout/ate_preference_checkbox"
            app:ateKey_pref_switch="?ate_key" />


    </com.afollestad.appthemeengine.prefs.ATEPreferenceCategory>
    <com.afollestad.appthemeengine.prefs.ATEPreferenceCategory
        android:title="Advanced"
        >
        <com.afollestad.appthemeengine.prefs.ATEColorPreference
            android:key="accent_color"
            android:persistent="true"
            android:title="FAB Color"
            app:ateKey_pref_color="?ate_key" />
    </com.afollestad.appthemeengine.prefs.ATEPreferenceCategory>


</PreferenceScreen>